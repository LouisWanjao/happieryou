<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="115dp"
        android:layout_height="95dp"
        android:layout_x="149dp"
        android:layout_y="139dp"
        app:srcCompat="@drawable/smile" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="104dp"
        android:layout_y="273dp"
        android:ems="10"
        android:hint="Email:"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="105dp"
        android:layout_y="335dp"
        android:ems="10"
        android:hint="Passoword:"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="104dp"
        android:layout_y="399dp"
        android:ems="10"
        android:hint="Confirm Password:"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="160dp"
        android:layout_y="477dp"
        android:backgroundTint="#4DE8D2"
        android:text="REGISTER" />

    <TextView
        android:id="@+id/loginLink"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_x="94dp"
        android:layout_y="537dp"
        android:clickable="true"
        android:cursorVisible="false"
        android:ems="10"
        android:inputType="text"
        android:text="Already have an account? Log in"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_x="111dp"
        android:layout_y="60dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Join Happier You"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
</AbsoluteLayout>